using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Sistema_Desktop_P4
{
    public partial class FrmAbrirChamado : Form
    {
        public FrmAbrirChamado()
        {
            InitializeComponent();
        }

        private async void btnEnviar_Click(object sender, EventArgs e)
        {
            // Validações
            if (string.IsNullOrWhiteSpace(txtTitulo.Text))
            {
                MessageBox.Show("O título é obrigatório.", "Atenção", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                txtTitulo.Focus();
                return;
            }

            if (string.IsNullOrWhiteSpace(txtDescricao.Text))
            {
                MessageBox.Show("A descrição é obrigatória.", "Atenção", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                txtDescricao.Focus();
                return;
            }

            try
            {
                // Desabilita botões durante o envio
                btnEnviar.Enabled = false;
                btnCancelar.Enabled = false;
                this.Cursor = Cursors.WaitCursor;

                // TODO: Aqui você chamaria o AbrirChamadoPresenter
                // Exemplo:
                // var presenter = new AbrirChamadoPresenter(new ApiChamadoService());
                // string resultado = await presenter.AbrirChamado(txtTitulo.Text, txtDescricao.Text);
                // MessageBox.Show(resultado, "Resultado", MessageBoxButtons.OK, MessageBoxIcon.Information);

                // Simulação de envio (remova quando integrar com API)
                await Task.Delay(1000); // Simula latência de rede
                MessageBox.Show($"Chamado '{txtTitulo.Text}' criado com sucesso!", "Sucesso", MessageBoxButtons.OK, MessageBoxIcon.Information);

                // Limpa os campos
                txtTitulo.Clear();
                txtDescricao.Clear();
                txtTitulo.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show($"Erro ao abrir chamado: {ex.Message}", "Erro", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
            finally
            {
                // Reabilita botões
                btnEnviar.Enabled = true;
                btnCancelar.Enabled = true;
                this.Cursor = Cursors.Default;
            }
        }

        private void btnCancelar_Click(object sender, EventArgs e)
        {
            this.Close();
        }
    }
}
